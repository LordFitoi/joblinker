---
import UserIcon from '../../assets/img/icons/user-01.svg';
import Layout from '../../layouts/Layout.astro';
---

<Layout >
	<main>
        <div class="container">
            <div class="user--image lazy-img">
                <!-- <img src="" alt=""> -->
                <img src={ UserIcon.src } class="fallback" alt="">
            </div>
            (( object.user.get_full_name ))
        </div>
	</main>
</Layout>
<style lang="scss">
    .user--image {
        width: 42px;
        height: 42px;
        background-color: var(--color-gray-200);
        transition: background-color 200ms ease;
        border-radius: 50%;
        overflow: hidden;

        &.big {
            width: 80px;
            height: 80px;
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;

            &.fallback {
                filter: grayscale(1) brightness(0) var(--filter-gray-500);
                transition: filter 300ms ease;
                object-fit: none;
            }
        }
    }
</style>
