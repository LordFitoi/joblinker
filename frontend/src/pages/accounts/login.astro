---
import Layout from "../../layouts/Layout.astro";
---
<Layout>
    <main>
        <div class="container">
            (% url 'account_login' as action_url %)
            <form action="(( action_url ))" method="post">
                (% csrf_token %)
                <div class="login">
                    <h1>Sign In</h1>
                    <div class="input--container">
                        <strong>Username</strong>
                        <label class="input">
                            (( form.login ))
                        </label>
                        <span class="error--label">
                            (( form.login.errors | first ))
                        </span>
                    </div>
                    <div class="input--container">
                        <strong>Password</strong>
                        <label class="input">
                            (( form.password ))
                        </label>
                        <span class="error--label">
                            (( form.password.errors | first ))
                        </span>
                    </div>
                    <button class="button--primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </main>
</Layout>

<style lang="scss">
    .login {
        position: relative;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        background-color: var(--color-base-white);
        border: 1px solid var(--color-gray-200);
        border-radius: 8px;
        box-shadow:
        0px 1px 3px rgba(16, 24, 40, 0.1),
        0px 1px 2px rgba(16, 24, 40, 0.06);
        overflow: hidden;
        margin: var(--general-spacing-xl-1) auto;
        min-height: 300px;
        max-width: 400px;
        box-shadow: none;
        border-color: var(--color-gray-300);
        padding: var(--general-spacing-md);


        h1 {
            margin-bottom: var(--general-spacing-lg);
        }

        .input--container {
            margin-bottom: var(--general-spacing-md);
        }
    }
</style>
