---
import Layout from "../../layouts/Layout.astro";
---
<Layout>
    <main class="bg-white"> 
        <div class="container">
            <div class="confirm-email">
                <form method="post" action="{% url 'account_confirm_email' confirmation.key %}">
                    (% csrf_token %)
                    <div class="box">
                        <div class="header">
                            <h2>Email Confirmation</h2>
                        </div>
                        <div class="middle">
                            <p>You've clicked the email link! Please confirm your email to complete the registration process.</p>
                            
                            <button class="button--primary" type="submit">Confirm Email Address</>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</Layout>
<style lang="scss">
    main {
        display: flex;
        align-items: center;
    }
    .confirm-email {
        max-width: 350px;
        margin: 0 auto;

        h1 {
            font-size: var(--general-font-xl-1);
            text-align: center;
        }
        > p {
            margin-bottom: var(--general-spacing-lg);
            text-align: center;
        }

        .box {
            .header {
                padding: 16px;
                h2 {
                    color: var(--color-gray-700);
                    font-size: var(--general-font-lg);
                    margin: 0;
                }
            }
            .middle {
                padding: 24px 16px;

                .button--primary {
                    width: 100%;
                    margin-top: 16px;
                }
            }
        }
    }
</style>