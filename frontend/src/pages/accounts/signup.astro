---
import Layout from '../../layouts/Layout.astro';
---
(% load allauth i18n socialaccount %)
<Layout>
    <main>
        <div class="container">
            (% url 'account_signup' as action_url %)
            <form action="(( action_url ))" method="post">
                (% csrf_token %)
                <div class="signup">
                    <h1>Sign Up</h1>
                    <div class="input--container">
                        <strong>Username</strong>
                        <label class="input">
                            (( form.username ))
                        </label>
                        <span class="error--label">
                            (( form.username.errors | first ))
                        </span>
                    </div>
                    <div class="input--container">
                        <strong>Email</strong>
                        <label class="input">
                            (( form.email ))
                        </label>
                        <span class="error--label">
                            (( form.email.errors | first ))
                        </span>
                    </div>
                    <div class="input--container">
                        <strong>Password</strong>
                        <label class="input">
                            (( form.password1 ))
                        </label>
                        <small class="error--label">
                            (( form.password1.errors | first ))
                        </small>
                    </div>
                    <div class="input--container">
                        <strong>Confirm Password</strong>
                        <label class="input">
                            (( form.password2 ))
                        </label>
                        <span class="error--label">
                            (( form.password2.errors | first ))
                        </span>
                    </div>
                    <button class="button--primary" type="submit">Create Account</button>
                </div>

            </form>
        </div>
    </main>
</Layout>
<style lang="scss">
    .signup {
        position: relative;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        background-color: var(--color-base-white);
        border: 1px solid var(--color-gray-200);
        border-radius: 8px;
        box-shadow:
        0px 1px 3px rgba(16, 24, 40, 0.1),
        0px 1px 2px rgba(16, 24, 40, 0.06);
        overflow: hidden;
        margin: var(--general-spacing-xl-1) auto;
        min-height: 400px;
        max-width: 400px;
        box-shadow: none;
        border-color: var(--color-gray-300);
        padding: var(--general-spacing-md);


        h1 {
            margin-bottom: var(--general-spacing-lg);
        }

        .input--container {
            margin-bottom: var(--general-spacing-md);
        }
    }
</style>
