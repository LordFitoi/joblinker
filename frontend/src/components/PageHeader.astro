---
import { Image } from 'astro:assets';
import LogoImage from '../assets/img/logo.png';
import LogInIcon from '../assets/img/icons/log-in-02.svg'
import MainMenu from './MainMenu.astro';
---
<header class="container" id="header">
  <a class="logo" href="/">
    <Image
      width="40"
      height="40"
      class="logo"
      src={LogoImage}
      alt="Joblinker logo"
    />
    <span>Job Linker</span>
  </a>
  <nav class="links">
    <a href="/">Jobs</a>
    <a href="/companies">Companies</a>

    (% if request.user.is_authenticated %)
      <MainMenu></MainMenu>
    (% else %)
      <a class="login--button" href="(% url 'account_login' %)">
        <img src={LogInIcon.src} alt="">
      </a>
    (% endif %)
  </nav>
</header>
<style lang="scss">
  header {
    padding: var(--general-spacing-md) var(--general-spacing-sm);
    gap: var(--general-spacing-md);
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;

    .logo {
      display: flex;
      width: max-content;
      gap: 4px;
      align-items: center;
      color: var(--color-gray-500);
      text-decoration: none;
      font-size: 14px;
      font-weight: 300;
      letter-spacing: 1px;
      text-transform: uppercase;
      flex-direction: column;
      transition: opacity 200ms ease;

      &:hover {
        opacity: 0.65;
        text-decoration: none;
      }
    }

    .container.search {
      max-width: 50%;
      background-color: transparent;
      box-shadow: none;
      border: none;
      padding: 0;
    }

    .links {
      display: flex;
      align-items: center;
      gap: var(--general-spacing-sm);
      margin-left: auto;

      a {
        font-weight: 300;
        color: var(--color-gray-500);
        transition: transform 300ms ease;
        
        span {
          font-size: var(--general-font-xs-1);
        }

        &:hover {
          transform: scale(1.1);            
        }

        &:nth-child(1) {
          margin-right: auto;
        }


        &.login--button {
          display: flex;
          width: 32px;
          height: 32px;
          align-items: center;
          justify-content: center;

          img {
            filter: var(--filter-gray-500);
          }
        }
      }

    }

    @media (max-width: var(--breakpoint-desktop)) {
      flex-direction: column;

      .container.search {
        max-width: none;
        width: 100%;
        padding: var(--general-spacing-sm);
      }

      .links {
        width: 100%;
        padding-left: var(--general-spacing-sm);
        padding-right: var(--general-spacing-sm);

        a span {
          font-size: var(--general-font-xs-2);
        }
      }
    }
  }
</style>
