---
import UserIcon from '../assets/img/icons/user-01.svg';
import LogOutIcon from '../assets/img/icons/log-out-01.svg';

---
<div>
    <details class="dropdown">
        <summary>
            <div class="user--image lazy-img">
                <!-- <img src="" alt=""> -->
                <img src={ UserIcon.src } class="fallback" alt="">
            </div>
        </summary>
        <ul class="box">
            <li class="user-profile">
                <div class="user--image lazy-img">
                    <!-- <img src="" alt=""> -->
                    <img src={ UserIcon.src } class="fallback" alt="">
                </div>
                <div>
                    <span>(( request.user.username ))</span>
                    <span>(( request.user.email ))</span>
                </div>
            </li>
            <li>
                <a href="/users/((request.user.username))/">
                    <img src={ UserIcon.src } alt="">
                    Profile
                </a>
                <a href="(% url 'account_logout' %)">
                    <img src={ LogOutIcon.src } alt="">
                    Log out
                </a>
            </li>
        </ul>
    </details>
</div>
<style lang="scss">
    .dropdown {
        position: relative;

        .user--image {
            width: 42px;
            height: 42px;
            background-color: var(--color-gray-200);
            transition: background-color 200ms ease, transform 300ms ease;
            border-radius: 50%;
            overflow: hidden;
            cursor: pointer;

            &:hover {
                transform: scale(1.1);
            }
            &.big {
                width: 80px;
                height: 80px;
            }

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;

                &.fallback {
                    filter: grayscale(1) brightness(0) var(--filter-gray-500);
                    transition: filter 300ms ease;
                    object-fit: none;
                }
            }
        }
        ul {
            bottom: -8px;
            right: 0;
            position: absolute;
            transform: translateY(100%);
            min-width: 240px;
            z-index: 10;

            li a {
                display: grid;
                grid-template-columns: 24px 1fr;
                align-self: stretch;
                white-space: nowrap;
                padding: 10px 16px;
                width: 100%;
                align-items: center;
                gap: 8px;
                transition: transform 300ms ease;
                color: var(--color-gray-700);

                img {
                    width: 20px;
                    height: 20px;
                    filter: var(--filter-gray-700);
                }

                &:hover {
                    transform: translateX(5px);
                }
            }

            li.user-profile {
                display: grid;
                grid-template-columns: max-content 1fr;
                border-bottom: 1px solid var(--color-gray-200);
                padding: 12px 16px;
                gap: 12px;

                .user--image:hover {
                    transform: none;
                    cursor: default;
                }


                div > span:first-child {
                    font-size: 16px;
                    color: var(--color-gray-700);
                }
            }
        }
    }
</style>
