---
import Button from "./Button.astro";
---
<div class="footer">
  <Button type="secondary" state="(% if not page_obj.has_previous %)disabled(% endif %)"
    href="(% if page_obj.has_previous %)?page=(( page_obj.previous_page_number ))(% endif %)">Previous</Button>
  <p class="page-counter">
    Page (( page_obj.number )) of (( page_obj.paginator.num_pages ))
  </p>
  <Button type="secondary" state="(% if not page_obj.has_next %)disabled(% endif %)"
    href="(% if page_obj.has_next %)?page=(( page_obj.next_page_number ))(% endif %)">Next</Button>
</div>

<style lang="scss">
  .footer {
    display: flex;
    padding: 16px 24px;
    border-top: 1px solid var(--color-gray-200);
    align-items: center;
    position: relative;
    margin-top: auto;
    justify-content: space-between;

    .page-counter {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
    }
  }
</style>
