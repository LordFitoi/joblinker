---
import TableFooter from "./TableFooter.astro";
---

<div class="table">
  (% for object in object_list %)<slot />(% endfor %)
  <TableFooter />
</div>
<style lang="scss">
  .table {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background-color: var(--color-base-white);
    border: 1px solid var(--color-gray-200);
    border-radius: 8px;
    box-shadow:
      0px 1px 3px rgba(16, 24, 40, 0.1),
      0px 1px 2px rgba(16, 24, 40, 0.06);
    overflow: hidden;
    min-height: 504px;
    box-shadow: none;
    border-color: var(--color-gray-300);

    &.no-min-height {
      min-height: unset;
    }

    &.search {
      height: max-content;
      min-height: 0;
      flex-direction: row;
      gap: 16px;
      padding: 8px;

      .input--container {
        flex-grow: 1;
      }
    }

    @media (max-width: var(--breakpoint-desktop)) {
      border: none;
      border-radius: 0%;
    }
  }
</style>
